<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:orientation="vertical">

    <Button
        android:id="@+id/publishContent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="publishContent"
        android:text="发帖">
    </Button>

    <Button
        android:id="@+id/queryContent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="queryContentById"
        android:text="根据Id查询帖子">
    </Button>

    <Button
        android:id="@+id/qonditionQuery"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="queryContent"
        android:text="分页查询">
    </Button>

    <Button
        android:id="@+id/addConnents"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="addComment"
        android:text="评论">
    </Button>

    <Button
        android:id="@+id/replyConnents"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="replyComment"
        android:text="回复评论">
    </Button>

    <Button
        android:id="@+id/addStar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="star"
        android:text="点赞">
    </Button>

    <Button
        android:id="@+id/cancelStar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="cancelStar"
        android:text="取消点赞">
    </Button>

    <Button
        android:id="@+id/message"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="queryMessages"
        android:text="查询用户消息">
    </Button>

</LinearLayout>